{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "react-jsx",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"typeRoots": ["./types", "./node_modules/@types"],
		"noEmit": false,
		"emitDeclarationOnly": false
	},
	"include": ["src/**/*", "types/**/*.d.ts", "src/events/**/*.ts"],
	"exclude": ["node_modules", "dist", "build", "**/node_modules/@types/glob/**", "**/node_modules/@types/mdx/**"]
}
